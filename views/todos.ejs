<%- include('header') -%>

<div class="todos-div">
    <h2><%= data.title %></h2>
    <div class="new-todo-form">
        <form action="/new-todo" method="post">
            <input type="text" class="new-todo-field" placeholder="Create todo">
            <button type="submit">+</button>
        </form>
    </div>
    <div class="existing-todos">
        <table>
            <% data.todos.forEach((todo) => { %>
                <tr>
                    <td class="todo-name"><%= todo %></td>
                    <td class="complete"><i class="fa-solid fa-check"></i></td>
                    <td class="delete"><i class="fa-solid fa-trash-can"></i></td>
                </tr>
            <% }) %>
        </table>
    </div>
</div>
<div class="logout-section">
    <button class="logout"><a href="/logout">Logout</a></button>
</div>

<%- include('footer') -%>